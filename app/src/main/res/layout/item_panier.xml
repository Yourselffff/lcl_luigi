<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Image placeholder -->
        <ImageView
            android:id="@+id/ivFilmImage"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:background="@android:color/darker_gray"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"/>

        <!-- Informations du film -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemTitre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titre du film"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvItemType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DVD"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <!-- Contrôles quantité -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnDiminuer"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:textSize="18sp"
                    android:padding="0dp"/>

                <TextView
                    android:id="@+id/tvQuantite"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp"/>

                <Button
                    android:id="@+id/btnAugmenter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:textSize="18sp"
                    android:padding="0dp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Partie droite avec prix et supprimer -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end">

            <Button
                android:id="@+id/btnSupprimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supprimer"
                android:textSize="12sp"
                android:padding="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvItemPrix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.99 €"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
